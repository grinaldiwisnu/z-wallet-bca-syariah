<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_item_transaction_home"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contactImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
        android:scaleType="centerCrop"
        android:background="#EBEEF2"
        android:src="@drawable/ic_baseline_add_24"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_font"
            android:text="@string/text_virtual_account_number"
            android:textSize="14sp"
            android:textColor="@color/darkGreyColor"/>

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_font_medium"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/text_va"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>